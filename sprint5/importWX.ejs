  <h1>Import WX!</h1>

  <form class="" action="/importWX" method="post">



    <div class="row mb-3 text-center">

      <div class="col-md-6 themed-grid-col">
        <label for="address" class="form-label">Location</label>
          <input name ="location" type="text" class="form-control" id="location" placeholder="Location" required>
          <div class="invalid-feedback">
            Please enter in the location
          </div>
      </div>
      <div class="col-md-3 themed-grid-col">
        <label for="address" class="form-label">Wind Direction</label>
          <input name="wind_direction" type="text" class="form-control" id="Wind Direction" placeholder="Wind Direction" required>
          <div class="invalid-feedback">
            Please enter wind direction
          </div>
      </div>
      <div class="col-md-3 themed-grid-col">
        <label for="address" class="form-label">Wind Speed</label>
          <input name="wind_speed" type="text" class="form-control" id="Wind Speed" placeholder="Wind Speed" required>
          <div class="invalid-feedback">
            Please enter wind speed
          </div>
      </div>

    </div>

    <!-- second column -->

    <div class="row mb-3 text-center">

      <div class="col-md-4 themed-grid-col">
        <label for="address" class="form-label">Visibility</label>
          <input name="vis" type="text" class="form-control" id="Visibility" placeholder="Visibility" required>
          <div class="invalid-feedback">
            Please enter in the visibility
          </div>
      </div>
      <div class="col-md-4 themed-grid-col">
        <label name="WX" for="address" class="form-label">Weather</label>
          <input type="text" class="form-control" id="Weather" placeholder="Weather" required>
          <div class="invalid-feedback">
            Please enter in significant weather
          </div>
      </div>
      <div class="col-md-4 themed-grid-col">
        <label for="address" class="form-label">Clouds</label>
          <input name="clouds" type="text" class="form-control" id="Clouds" placeholder="Clouds" required>
          <div class="invalid-feedback">
            Please enter in cloud heights
          </div>
      </div>

    </div>


    <!-- third column -->

    <div class="row mb-3 text-center">

      <div class="col-md-4 themed-grid-col">
        <label for="address" class="form-label">Temperature</label>
          <input name="temp" type="text" class="form-control" id="Temperature" placeholder="Temperature in Celsius" required>
          <div class="invalid-feedback">
            Please enter in temperature
          </div>
      </div>
      <div class="col-md-4 themed-grid-col">
        <label for="address" class="form-label">Dew Point</label>
          <input name="dew" type="text" class="form-control" id="Dew Point" placeholder="Dew Point in Celsius" required>
          <div class="invalid-feedback">
            Please enter in dew point
          </div>
      </div>
      <div class="col-md-4 themed-grid-col">
        <label for="address" class="form-label">Altimeter</label>
          <input name="altimeter" type="text" class="form-control" id="Altimeter" placeholder="Altimeter" required>
          <div class="invalid-feedback">
            Please enter in altimeter
          </div>
      </div>

    </div>

    <br>

    <!-- 4th column -->

    <div class="row mb-3 text-center">

      <div class="col-md-4 themed-grid-col">
        <!--Blank space for effect-->
      </div>
      <div class="col-md-4 themed-grid-col">
          <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
      </div>
      <div class="col-md-4 themed-grid-col">
        <!--Blank space for effect-->
      </div>

    </div>

    </form>



  <h1>Request Verification</h1>

  <form class="" action="/requestVerify" method="post">
    <div class="row mb-3 text-center">

      <div class="col-md-6 themed-grid-col">
        <label for="address" class="form-label">Location</label>
          <input name ="location" type="text" class="form-control" id="location" placeholder="ICAO" required>
          <div class="invalid-feedback">
            Please enter in the location
          </div>
      </div>
      <div class="col-md-6 themed-grid-col">
        <label for="address" class="form-label">Email Address</label>
          <input name ="email" type="email" class="form-control" id="email" placeholder="Email address" required>
          <div class="invalid-feedback">
            Please give an email address
          </div>
      </div>

    </div>

    <br>

    <div class="row mb-3 text-center">

      <div class="col-md-4 themed-grid-col">
        <!--Blank space for effect-->
      </div>
      <div class="col-md-4 themed-grid-col">
          <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
      </div>
      <div class="col-md-4 themed-grid-col">
        <!--Blank space for effect-->
      </div>

    </div>

  </form>

<%- include('header') -%>
<!-- a container from bootstrap from mid width -->
<div class="container-md">
  <!--Navigation bar-->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <!-- Title of application displayed on navbar -->
      <a class="navbar-brand" href="<%= CURRENTWX %>"><h2>Weather Wizard</h2></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="<%= CURRENTWX %>">Current Weather</a>
          <a class="nav-link active" aria-current="page" href="<%= FIVEDAYWX %>">5-Day Weather</a>
          <a class="nav-link" href="<%= OBS %>">Observations</a>
          <a class="nav-link" href="<%= REQUEST %>">Requests</a>
          <a class="nav-link" href="<%= PROFILE %>">Profile</a>
        </div> <!-- End of navbar-nav div -->
      </div> <!-- End of collapse navbar-collapse div -->
    </div> <!-- End of container-fluid div -->
  </nav> <!-- End of navigation bar div -->
  <!--      -->
  <h1>Five Day WX</h1>

  <div class="d-grid gap-2 d-flex justify-content-md-front">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      +
    </button>
  </div>

  <ul class="list-group list-group-flush">
    <% newListItems.forEach(function(item){ %>
      <li class="list-group-item">
        <form action="/deleteFiveDayWX" method="post">
          <!--Delete button-->
          <div class="d-grid gap-2 d-flex justify-content-end">
            <input type="hidden" name="itemID" value="<%=item.city%>">
            <button type="button" class="btn btn-danger btn-xs" aria-label="Close" onClick="this.form.submit()" >x</button>
          </div>
          <!--Five day data-->
          <h2 style="text-align:left;"><%= item.city %></h2>

          <br>

          <div class="row">
            <div class="col-sm-2"><!--Dates--></div>
            <div class="col-sm-2"><%= item.date %></div>
            <div class="col-sm-2"><%= item.date2 %></div>
            <div class="col-sm-2"><%= item.date3 %></div>
            <div class="col-sm-2"><%= item.date4 %></div>
            <div class="col-sm-2"><%= item.date5 %></div>
          </div>

          <br>


          <div class="row">
            <div class="col-sm-2">Weather</div>
            <div class="col-sm-2"><%= item.wx %></div>
            <div class="col-sm-2"><%= item.wx2 %></div>
            <div class="col-sm-2"><%= item.wx3 %></div>
            <div class="col-sm-2"><%= item.wx4 %></div>
            <div class="col-sm-2"><%= item.wx5 %></div>
          </div>

          <br>

          <div class="row">
            <div class="col-sm-2">Clouds</div>
            <div class="col-sm-2"><%= item.clouds %></div>
            <div class="col-sm-2"><%= item.clouds2 %></div>
            <div class="col-sm-2"><%= item.clouds3 %></div>
            <div class="col-sm-2"><%= item.clouds4 %></div>
            <div class="col-sm-2"><%= item.clouds5 %></div>
          </div>

          <br>

          <div class="row">
            <div class="col-sm-2">Visibility</div>
            <div class="col-sm-2"><%= item.vis %> SM</div>
            <div class="col-sm-2"><%= item.vis2 %> SM</div>
            <div class="col-sm-2"><%= item.vis3 %> SM</div>
            <div class="col-sm-2"><%= item.vis4 %> SM</div>
            <div class="col-sm-2"><%= item.vis5 %> SM</div>
          </div>

          <br>

          <div class="row">
            <div class="col-sm-2">Low Temperature</div>
            <div class="col-sm-2"><%= item.low %> F&deg</div>
            <div class="col-sm-2"><%= item.low2 %> F&deg</div>
            <div class="col-sm-2"><%= item.low3 %> F&deg</div>
            <div class="col-sm-2"><%= item.low4 %> F&deg</div>
            <div class="col-sm-2"><%= item.low5 %> F&deg</div>
          </div>

          <br>

          <div class="row">
            <div class="col-sm-2">High Temperature</div>
            <div class="col-sm-2"><%= item.high %> F&deg</div>
            <div class="col-sm-2"><%= item.high2 %> F&deg</div>
            <div class="col-sm-2"><%= item.high3 %> F&deg</div>
            <div class="col-sm-2"><%= item.high4 %> F&deg</div>
            <div class="col-sm-2"><%= item.high5 %> F&deg</div>
          </div>

          <br>

          <div class="row">
            <div class="col-sm-2">Winds</div>
            <div class="col-sm-2"><%= item.winds %>KT</div>
            <div class="col-sm-2"><%= item.winds2 %>KT</div>
            <div class="col-sm-2"><%= item.winds3 %>KT</div>
            <div class="col-sm-2"><%= item.winds4 %>KT</div>
            <div class="col-sm-2"><%= item.winds5 %>KT</div>
          </div>
        </form>
      </li>
    <%}); %>
  </ul>

  <br>



  <!-- form for the modal display -->
  <form class="" action="/fiveDayWX" method="post">
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add a location</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <label for="cityInput">City Name:</label>
            <input id="cityInput" type="text" name="cityName">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Commit</button>
          </div>
        </div>
      </div>
    </div>
  </form>


<%- include('footer') -%>

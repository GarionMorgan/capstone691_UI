<h1>Climatology Request</h1>

<form class="" action="/requestedClimo" method="post">
  <div class="row mb-3 text-center">

    <div class="col-md-6 themed-grid-col">
      <label for="address" class="form-label">Location</label>
        <input name ="location" type="text" class="form-control" id="location" placeholder="Location" required>
        <div class="invalid-feedback">
          Please enter in the location
        </div>
    </div>
    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Time Frame</label>
        <input name ="time" type="text" class="form-control" id="time" placeholder="MM/DD/YY - MM/DD/YY" required>
        <div class="invalid-feedback">
          MM/DD/YY - MM/DD/YY
        </div>
    </div>
    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Email Address</label>
        <input name ="email" type="email" class="form-control" id="email" placeholder="Email address" required>
        <div class="invalid-feedback">
          Please give an email address
        </div>
    </div>

  </div>


  <br>


  <div class="row mb-3 text-center">

    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Winds</label>
        <input name ="winds" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>
    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Gusts</label>
        <input name ="gust" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>
    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Clouds</label>
        <input name ="clouds" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>
    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Sunset/Sunrise</label>
        <input name ="solar" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>

  </div>

  <br>

  <div class="row mb-3 text-center">

    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Thunderstorms</label>
        <input name ="TSRA" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>
    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">SVR Thunderstorms</label>
        <input name ="SVR" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>
    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Snow</label>
        <input name ="snow" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>
    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Hail</label>
        <input name ="hail" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>

  </div>

  <br>

  <div class="row mb-3 text-center">

    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Mist</label>
        <input name ="mist" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>
    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Fog</label>
        <input name ="fog" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>
    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Blizzard</label>
        <input name ="blizzard" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>
    <div class="col-md-3 themed-grid-col">
      <label for="address" class="form-label">Tornado</label>
        <input name ="tornado" type="text" class="form-control" id="closed" placeholder="Yes or No">
    </div>

  </div>

  <br>

  <div class="row mb-3 text-center">

    <div class="col-md-4 themed-grid-col">
      <!--Blank space for effect-->
    </div>
    <div class="col-md-4 themed-grid-col">
        <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
    </div>
    <div class="col-md-4 themed-grid-col">
      <!--Blank space for effect-->
    </div>

  </div>

</form>
